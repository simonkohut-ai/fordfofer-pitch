{
  "name": "chiaras-ai-marketing-studio",
  "version": "1.0.0",
  "description": "Chiara's AI Marketing Studio - Desktop App for Windows",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder build --win --publish never",
    "dist": "electron-builder"
  },
  "keywords": ["ai", "marketing", "influencer", "desktop", "windows"],
  "author": "Goliáš Čapovič <gcapovic.biz@proton.me>",
  "license": "Proprietary",
  "build": {
    "appId": "com.chiarasworld.aimarketing",
    "productName": "Chiara's AI Marketing Studio",
    "win": {
      "target": ["nsis"]
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    },
    "files": [
      "**/*",
      "!assets/README.md"
    ]
  },
  "dependencies": {
    "axios": "^1.6.2",
    "openai": "^4.20.1"
  },
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1"
  }
}

